{% extends 'base.html.twig' %}
{% block body %}
    <!DOCTYPE html>
    <html lang="fr">
    <body>
    <div id="main-container">
        {{ include('partials/nav.html.twig') }}
        <main>
            <header>
                <div id="current-user"></div>
                <div id="title-page">
                    <div class="flex-header">
                        <h1> {{ project.name }}</h1>
                        <div class="user-list">
                            <div class="avatar">ND</div> {# TODO check for user associated #}
                            <div class="avatar">DB</div>
                        </div>
                        <a class="button" href="">Modifier</a>
                    </div>
                </div>
            </header>
            <div id="content">
                <div id="tasks-container">
                    {% for stati in status %}
                        <div class="task-column">
                            <h2>{{ stati.name }}</h2>
                            <div class="tasks-list">
                                {% for task in project.tasks %}
                                    <a class="task" href="tache.html">
                                        <h3>{{ task.title }}</h3>
                                        <p>{{ task.description }}</p>
                                        <div class="task-infos">
                                            <div class="task-deadline">
                                                <i class="fa-regular fa-calendar"></i> {{ task.deadline|date('d/m/Y') }}
                                            </div>
                                            <div class="mini-user">
                                                {{ task.employe.lastname }} {# TODO Show ico instead #}
                                            </div>
                                        </div>
                                    </a>
                                {% endfor %}
                                <a href="tache-add.html" class="task-add">
                                    + Ajouter une t√¢che
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </main>
    </div>
    </body>
    </html>
{% endblock %}