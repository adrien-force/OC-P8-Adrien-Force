{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="fr">
<body>
<div id="main-container">
    {{ include('partials/nav.html.twig') }}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <div class="flex-header">
                <h1>Équipe</h1>
                <a class="button" href="{{ path('app_employe_add')}}">Ajouter un collaborateur</a>
                </div>
            </div>
        </header>
        <div id="content">
            <table id="team-container">
                <thead>
                <tr>
                    <th>Prénom, Nom</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for employe in employes %}
                <tr>
                    <td>
                        <div class="employee-infos">
                            <div class="employee-avatar">
                                {{ employe.initials }}
                            </div>
                            <div class="employee-coords">
                                <strong>{{ employe.fullname }}</strong>
                                <span>{{ employe.email}}</span>
                            </div>
                        </div>
                    </td>
                    <td>CDI</td>
                    <td>
                        <a class="button button-edit-team" href="{{ path('app_employe_edit' ,{id: employe.id}) }}">
                            Éditer
                        </a>
                        <a class="delete-team" href="{{ path('app_employe_remove', {id: employe.id}) }}">
                            Supprimer
                        </a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
</div>
</body>
</html>
{% endblock %}
