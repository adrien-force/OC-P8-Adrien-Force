{% extends 'base.html.twig' %}
{% block body %}
    <!DOCTYPE html>
    <html lang="fr">
    <body>
    <div id="main-container">
        {{ include('partials/nav.html.twig') }}
        <main>
            <header>
                <div id="current-user"></div>
                <div id="title-page">
                    <h1>
                        {% if task.id %}
                        {{ task.title }}
                        {% else %}
                        Créer une tâche
                        {% endif %}
                    </h1>
                </div>
            </header>
            <div id="content">
                {{ form_start(form) }}
                <form name="tache" method="post">
                    <div>
                        {{ form_label(form.title, 'Titre') }}
                        {{ form_widget(form.title) }}
                        <div class="form-error-message">
                            {{ form_errors(form.title) }}
                        </div>
                    </div>
                    <div>
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description) }}
                        <div class="form-error-message">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                    <div class="flex-form">
                        <div>
                            {{ form_label(form.deadline, 'Date') }}
                            {{ form_widget(form.deadline) }}
                            <div class="form-error-message">
                                {{ form_errors(form.deadline) }}
                            </div>
                        </div>
                        <div>
                            <div>
                                {{ form_label(form.status, 'Statut') }}
                                {{ form_widget(form.status) }}
                                <div class="form-error-message">
                                    {{ form_errors(form.status) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        {{ form_label(form.employe, 'Collaborateur') }}
                        {{ form_widget(form.employe) }}
                        <div class="form-error-message">
                            {{ form_errors(form.employe) }}
                        </div>
                    </div>
                    <br>
                    <button class="button button-submit">Ajouter</button>
                    {% if task.id %}
                        <br>
                        <a href="{{ path('app_task_delete', {id: task.id}) }}" class="delete-task">Supprimer la tâche </a>
                    {% endif %}
                </form>
                {{ form_end(form) }}
            </div>
        </main>
    </div>
    </body>
    </html>
{% endblock %}
